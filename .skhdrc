ctrl + cmd - k : yabai -m display --focus prev || yabai -m display --focus last
ctrl + cmd - j : yabai -m display --focus next || yabai -m display --focus first

# cmd - j : yabai -m display --focus prev || yabai -m display --focus last
cmd - j : yabai -m window --focus prev || yabai -m window --focus last
cmd - k : yabai -m window --focus next || yabai -m window --focus first

cmd + shift - j : yabai -m window --swap prev || yabai -m window --swap last
cmd + shift - k : yabai -m window --swap next || yabai -m window --swap first

cmd + ctrl + shift - j : yabai -m window --swap prev || yabai -m window --swap last

ctrl + cmd - k : yabai -m display --focus next || yabai -m display --focus first
cmd + shift - c : yabai -m window --close

#cmd + h : source ~/.yabairc;\
#                 yabai_split_ratio_down
#cmd - l : source ~/.yabairc;\
#                 yabai_split_ratio_up

# I use command + p for spotlight.  This config is trying to be close enough to my linux awesome-wm setup that I can use both without constant frustration.
cmd - space :  yabai -m space --rotate 90
cmd + ctrl - space : yabai -m window --toggle float
